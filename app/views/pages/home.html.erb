<div class="container-fluid" id="main-header">
  <div class="row align-items-center justify-items-between d-flex main-header"  >
    <span class="svg-home-header col-4">
      <%= show_svg("unexpected_friends.svg") %>
    </span>
    <div class="container col-7 main-text-home justify-content-center text-center">
      <h1 id="welcome-title">Welcome to Other Otter</h1>
      <p id="welcome-message">Come and find your S.O (Significant Otter).</p>
    </div>
  </div>
</div>

<div class="container" style="text-align: center;" id="underline-and-arrow">
  <div class="row small-underline"></div>
  <div class="row arrow-next-otter" id="arrow-next-star">
    <a href="#otter-stars">
    <span class="far fa-arrow-alt-circle-down"></span>
    </a>
  </div>
</div>

<div class="container mt-3">
    <h2 id="otter-stars" class="text-align">Our Star Otters</h2>
</div>
<div class="container">
<% @otters.each_slice(4) do |otters|%>
    <div class="container d-flex justify-content-around">
      <% otters.each do |otter| %>
          <div class="card col-md-3 m-4 grow-animation">
            <div class="card__image-container">
              <% if otter.photo.attached? %><%= cl_image_tag otter.photo.key, crop: :fill, class:"card__image" %>
              <% end %>
            </div>
            <div class="card__content">
              <h2 class="card__title"><%= otter.name %></h2>
            <p><%= otter.personality %></p>
            <%= link_to "See More", otter_path(otter), class:"btn card__btn btn-primary" %>
            </br>
            </div>
          </div>
        <% end %>
    </div>
  <% end %>
</div>

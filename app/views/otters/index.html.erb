<h1>Otters index</h1>


<% @otters.each do |otter| %>
  <%= otter.name %>
  <% if otter.photo.attached? %>
    <%= cl_image_tag otter.photo.key, height: 300, width: 200, crop: :fit %>
  <% end %>
  <% if policy(otter).edit? %>
    <%= link_to "Update", edit_otter_path(otter) %>
  <% end %>
  <%if policy(otter).destroy? %>
    <%= link_to "Delete", otter_path(otter), method: :delete %>
  <% end %>
<% end %>


<%if policy(Otter).create? %>
  <%= link_to "New otter", new_otter_path %>
<% end %>
